<?xml version="1.0" encoding="us-ascii"?>
<!--##########################################
   #                                        #
   #     Example steering file for marlin   #
   #                                        #
   ##########################################-->

<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">
  <execute>

    <processor name="MyTrackCutChecker"/>

  </execute>


  <global>
    <parameter name="LCIOInputFiles">  DATADIR_REPLACE/reco_OUTPUTFILE_REPLACE.slcio </parameter>
    <!-- Limit the number of processed records (run+evt): -->
    <parameter name="MaxRecordNumber" value="MAXEVENTS_REPLACE" />
    <parameter name="SkipNEvents" value="SKIPEVENTS_REPLACE" />
    <parameter name="SupressCheck" value="false" />
    <parameter name="Verbosity" options="DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT"> VERBOSITY_REPLACE </parameter>
    <parameter name="RandomSeed" value="1234567890" />
  </global>


  <!-- == Track checker parameters == -->
  <processor name="MyTrackCutChecker" type="TrackCutChecker">
    <!--Use default settings-->
    <parameter name="OutputFileName" type="string"> ROOTDIR_REPLACE/ana_reco_OUTPUTFILE_REPLACE.root </parameter>
    <parameter name="Verbosity" type="string"> VERBOSITY_REPLACE </parameter>
    <!-- <parameter name="TreeName" type="string">testtreename </parameter> -->
  </processor>

</marlin>
